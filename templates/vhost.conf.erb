server {
  listen       <%= port %>;
  server_name  <%= vhost %>.<%= domain %> <%= aliases.join(", ");

  access_log  /var/www/<%= domain %>/<%= vhost %>/logs/access.log  main;

  location / {
    root   /var/www/<%= domain %>/<%= vhost %>/htdocs;
    index  index.php index.html index.htm;
  }

  include /var/www/<%= domain %>/<%= vhost %>/configs/nginx.conf
}

